@using TestData.Models
@model employee
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Add</title>
</head>
<body>

    <div class="Content">



        <form method="post" action="/Home/Add">
            <div class="form-group">
                <label for="exampleDropdownFormEmail2">User Name</label>
                <input name="UserName" type="Text" class="form-control" id="exampleDropdownFormEmail2">
                @Html.ValidationMessageFor(i => i.UserName, null, new { @class = " alert-danger mt-5 " })
            </div>
            <div class="form-group">
                <label for="exampleDropdownFormPassword2">Password</label>
                <input name="Password" type="Password" class="form-control" id="exampleDropdownFormPassword2" placeholder="Password">
                @Html.ValidationMessageFor(i => i.Password, null, new { @class = " alert-danger mt-5 " })
            </div>
            <div class="form-group">
                <label for="exampleDropdownFormEmail2"> Name</label>
                <input name="Name" type="Text" class="form-control" id="exampleDropdownFormEmail2">
                @Html.ValidationMessageFor(i => i.Name, null, new { @class = " alert-danger mt-5 " })
            </div>
            <div class="form-group">
                <label for="exampleDropdownFormPassword2">Email</label>
                <input name="email" type="text" class="form-control" id="exampleDropdownFormPassword2" placeholder="Email">
                @Html.ValidationMessageFor(i => i.Email, null, new { @class = " alert-danger mt-5 " })
            </div>
            <div class="form-group">
                @Html.LabelFor(i => i.Department)
                @Html.DropDownListFor(i => i.DeptID, (List<SelectListItem>)ViewBag.DepList, new
                   {
                       @class = "form-control"
                   })
                @Html.ValidationMessageFor(i => i.DeptID, null, new { @class = " alert-danger mt-5 " })
            </div>




            <input type="submit" class="btn btn-primary" value="Add Employee" />
        </form>
    </div>
</body>
</html>
