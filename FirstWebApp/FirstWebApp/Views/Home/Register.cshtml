@using LuxorDemo.Models
@model IGuestResponse


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Register</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class=" text-center">
                    <div>Please Fill The The Following Form</div>
                </div>
                @*@Html.ValidationSummary()*@
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(i => i.Name)
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(i => i.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(i => i.Email)
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.TextBoxFor(i => i.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(i => i.Phone)
                    </div>
                        <div class="form-group">
                            <label>Will Attend ?</label>
                            @Html.DropDownListFor(i => i.WillAttend, new List<SelectListItem>()
                           {
                                new SelectListItem(){Text="Choose an option"},
                                new SelectListItem(){Text="Yes", Value= bool.TrueString},
                                new SelectListItem(){Text="No", Value=bool.FalseString},
                           }, new { @class = "form-control" })
                            @Html.ValidationMessageFor(i => i.WillAttend)
                        </div>
                        <div class="text-center">
                            <input type="submit" value="Register" class="btn btn-primary" />
                        </div>
                }
            </div>
            <div class="col-3"></div>
        </div>
    </div>
</body>
</html>
